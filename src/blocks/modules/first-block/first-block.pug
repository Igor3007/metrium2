mixin first-block  
    section.section-first-block
        .container
            .first-block
                .first-block__bg
                    +picture('/img/other/img-big')
                .first-block__wrp
                    .first-block__title
                        h1 
                            | Метриум Премиум
                            span Элитная недвижимость в Москве и Подмосковье
                    .first-block__fastlink
                        ul
                            li: a(href='#') Лучшие предложения
                            li: a(href='#') Эксклюзивные лоты
                            li: a(href='#') Самые престижные районы
                            li: a(href='#') Москва и Подмосковье

                    .first-block__filter
                        .fb-filter
                            .fb-filter__tab
                                ul
                                    li: span Городская
                                    li: span Загородная
                            .fb-filter__tab-container

                                .fb-filter__tab-content: +tab-content-city
                                .fb-filter__tab-content: +tab-content-village

                    .first-block__adv
                        .fb-advantages
                            .fb-advantages__list
                                .fb-advantages__item
                                    .fb-card-adv
                                        .fb-card-adv__title > 10 лет
                                        .fb-card-adv__desc на рынке премиальной недвижимости
                                .fb-advantages__item
                                    .fb-card-adv
                                        .fb-card-adv__title > 10 тысяч
                                        .fb-card-adv__desc клиентов в Москве и Московской области
                                .fb-advantages__item
                                    .fb-card-adv
                                        .fb-card-adv__title > 50 экспертов
                                        .fb-card-adv__desc экспертов в сегментах премиум и элит
                                .fb-advantages__item
                                    .fb-card-adv
                                        .fb-card-adv__title > 600 объектов
                                        .fb-card-adv__desc среди наших предложений недвижимости



