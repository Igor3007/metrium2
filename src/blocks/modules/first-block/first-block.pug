mixin tab-content-city
    form(action='#' method='POST')
        .fb-filter__row
            .fb-filter__fields
                .fb-filter__field
                    +select-field({
                        placeholder: 'Покупка',
                        option: [
                            'Покупка',
                            'Аренда',
                            'Субаренда',
                        ]
                    })
                .fb-filter__field
                    +select-field({
                        placeholder: 'Тип недвижимости',
                        option: [
                            'Квартиры',
                            'Котеджи',
                            'Таунхаусы',
                        ]
                    })
                    
                .fb-filter__field
                    +price-field

                .fb-filter__field
                    +select-field({
                        placeholder: 'Район',
                        option: [
                            'Арбат',
                            'Басманный',
                            'Замоскворечье',
                            'Красносельский',
                            'Мещанский',
                            'Пресненский',
                            'Таганский',
                            'Тверской',
                            'Хамовники',
                            'Якиманка',
                        ]
                    })
        .fb-filter__row
            .fb-filter__items
                .fb-filter__item
                    .fb-filter-all
                        span Показать ещё фильтры
                        +icons('#ic_arrow', 16) 
                .fb-filter__item
                    button.btn.btn-line
                        +icons('#ic_loc')
                        span Смотреть на карте
                .fb-filter__item
                    button.btn.btn-line
                        +icons('#ic_house')
                        span Подобрать недвижимость
        .fb-filter__row
            .fb-filter__selections
                ul
                    li: a(href='#') Купить квартиру в центре Москвы
                    li: a(href='#') Купить участок в Подмосковье
                    li: a(href='#') Сервисные апартаменты
                    li: a(href='#') Квартиры с террасами
                    li: a(href='#') Патриаршие пруды
                    li: a(href='#') Квартиры для большой семьи


