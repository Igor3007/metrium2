mixin select-field(data)
    if data.multiple
        select(placeholder=data.placeholder multiple)
            each item in data.option
                option= item
    else
        select(placeholder=data.placeholder)
            each item in data.option
                option= item
    

mixin price-field
    input(type="text" placeholder="от")
    input(type="text" placeholder="до") 

mixin tab-content-city
    form(action='#' method='POST')
        .fb-filter__row
            .fb-filter__fields
                .fb-filter__field.fb-filter__field--first
                    +select-field({
                        placeholder: 'Купить',
                        option: [
                            'Покупка',
                            'Аренда',
                            'Субаренда',
                        ]
                    })
                .fb-filter__field.fb-filter__field--second
                    +select-field({
                        placeholder: 'Тип недвижимости',
                        option: [
                            'Квартиры',
                            'Котеджи',
                            'Таунхаусы',
                        ]
                    })
                    
                .fb-filter__field
                    .price-input
                        label Цена от
                        input(type="text" placeholder="10 000 000")

                .fb-filter__field
                    .price-input
                        label до
                        input(type="text" placeholder="9 999 000 000")

                .fb-filter__field.fb-filter__field--currency
                    .select-currency
                        .select-currency__item
                            label
                                input(type="radio" name="currency" value="₽")
                                span ₽ 
                        .select-currency__item
                            label
                                input(type="radio" name="currency" value="$")
                                span $ 
                        .select-currency__item
                            label
                                input(type="radio" name="currency" value="€")
                                span € 

                
        .fb-filter__row.fb-filter__row--second
            .fb-filter__fields
                .fb-filter__field
                    +select-field({
                        multiple: true,
                        placeholder: 'Район',
                        option: [
                            'Арбат',
                            'Басманный',
                            'Замоскворечье',
                            'Красносельский',
                            'Мещанский',
                            'Пресненский',
                            'Таганский',
                            'Тверской',
                            'Хамовники',
                            'Якиманка',
                        ]
                    })

                .fb-filter__field
                    .fb-filter-all
                        span Показать ещё фильтры
                        +icons('#ic_arrow-down', 16) 

            .fb-filter__items
                    
                .fb-filter__item
                    button.btn.btn-line
                        +icons('#ic_loc')
                        span Смотреть на карте
                .fb-filter__item
                    button.btn.btn-green
                        +icons('#ic_house')
                        span Подобрать недвижимость
        .fb-filter__row
            .fb-filter__selections
                ul
                    li: a(href='#') Купить квартиру в центре Москвы
                    li: a(href='#') Купить участок в Подмосковье
